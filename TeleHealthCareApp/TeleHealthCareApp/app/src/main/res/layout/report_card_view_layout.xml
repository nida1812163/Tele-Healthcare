<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_backround_color"
            android:orientation="horizontal">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Diagnosis:"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:background="@color/blue_backround_color"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                    tools:ignore="MissingConstraints"/>


                <TextView
                    android:id="@+id/info_diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:textSize="17sp"
                    android:background="@color/blue_backround_color"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                    app:layout_constraintTop_toBottomOf="@+id/diagnosis"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="5dp">
                </TextView>


                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight:"
                    android:textColor="@color/white"
                    android:background="@color/blue_backround_color"
                    android:textSize="18sp"
                    android:layout_marginLeft="70dp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toRightOf="@+id/diagnosis"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/info_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="70dp"
                    android:padding="2dp"
                    android:textSize="17sp"
                    android:background="@color/blue_backround_color"
                    app:layout_constraintTop_toBottomOf="@+id/weight"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintLeft_toRightOf="@+id/diagnosis"
                    tools:layout_editor_absoluteX="5dp" />




                <TextView
                    android:id="@+id/lab_test_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lab Tests &amp; Its Description:"
                    android:textColor="@color/white"
                    android:background="@color/blue_backround_color"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                    app:layout_constraintTop_toBottomOf="@+id/info_weight"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/info_lab_test_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:textSize="17sp"
                    android:background="@color/blue_backround_color"
                    app:layout_constraintTop_toBottomOf="@+id/lab_test_description"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                    tools:layout_editor_absoluteX="5dp" />






            </androidx.constraintlayout.widget.ConstraintLayout>




        </LinearLayout>


        <Button
            android:id="@+id/upload_video_button"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:textSize="18sp"
            android:text="Upload Video"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#0521CC"
            android:layout_marginLeft="260dp"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/video_uploaded_text"
            android:layout_width="112dp"
            android:layout_height="60dp"
            android:textSize="22sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Video Uploaded!"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="#0521CC"
            android:layout_marginLeft="260dp"
            android:visibility="invisible"/>


    </androidx.cardview.widget.CardView>


</LinearLayout>